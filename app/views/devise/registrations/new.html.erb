<div class="container p-4 d-flex justify-content-center ">
  <div>
    <h2 class="text-center">Mirëseardhje ne Happy 35 Anisa!</h2>
    <p class="text-center">Ju lutem regjistrohuni përpara se të ngarkoni foton dhe videon tuaj</p>

    <div class="card-white">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true, label: 'Emër' %>
          <%= f.input :email,
                      required: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} karaktere minimale" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      label: 'Fjalëkalim' %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      label: 'Konfirmimi i fjalëkalimit' %>
        </div>

        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Regjistrohuni", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
